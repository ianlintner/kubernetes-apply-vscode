{
  "name": "kubert",
  "displayName": "Kubernetes Manifest Applier Visual Studio Code Extension",
  "description": "Apply Kubernetes and Kustomize manifests directly from the VS Code editor with one-click.",
  "version": "0.1.1",
  "license": "MIT",
  "publisher": "CatHerding",
  "icon": "docs/assets/logo.png",
  "galleryBanner": {
    "color": "#1F6FEB",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://github.com/ianlintner/kubernetes-apply-vscode/actions/workflows/node-ci.yml/badge.svg?branch=main",
      "href": "https://github.com/ianlintner/kubernetes-apply-vscode/actions/workflows/node-ci.yml",
      "description": "Node CI"
    },
    {
      "url": "https://github.com/ianlintner/kubernetes-apply-vscode/actions/workflows/docs-check.yml/badge.svg?branch=main",
      "href": "https://github.com/ianlintner/kubernetes-apply-vscode/actions/workflows/docs-check.yml",
      "description": "Docs Check"
    },
    {
      "url": "https://github.com/ianlintner/kubernetes-apply-vscode/actions/workflows/docs.yml/badge.svg?branch=main",
      "href": "https://github.com/ianlintner/kubernetes-apply-vscode/actions/workflows/docs.yml",
      "description": "Docs Deploy"
    },
    {
      "url": "https://github.com/ianlintner/kubernetes-apply-vscode/actions/workflows/publish.yml/badge.svg?branch=main",
      "href": "https://github.com/ianlintner/kubernetes-apply-vscode/actions/workflows/publish.yml",
      "description": "Publish"
    }
  ],
  "markdown": "github",
  "homepage": "https://ianlintner.github.io/kubernetes-apply-vscode/",
  "bugs": {
    "url": "https://github.com/ianlintner/kubernetes-apply-vscode/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ianlintner/kubernetes-apply-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "kubernetes",
    "k8s",
    "kustomize",
    "kubectl",
    "manifest",
    "deployment"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "workspaceContains:**/kustomization.yaml"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "k8s-manifest.apply",
        "title": "Apply Manifest",
        "category": "Kubernetes"
      },
      {
        "command": "k8s-manifest.validate",
        "title": "Validate Manifest",
        "category": "Kubernetes"
      },
      {
        "command": "k8s-manifest.buildKustomize",
        "title": "Build with Kustomize",
        "category": "Kubernetes"
      },
      {
        "command": "k8s-manifest.applyKustomize",
        "title": "Apply Kustomize",
        "category": "Kubernetes"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "k8s-manifest.apply",
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "group": "1_modification"
        },
        {
          "command": "k8s-manifest.validate",
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "command": "k8s-manifest.apply",
          "when": "resourceExtname == .yaml || resourceExtname == .yml",
          "group": "2_workspace"
        },
        {
          "command": "k8s-manifest.buildKustomize",
          "when": "resourceFilename == kustomization.yaml || resourceFilename == kustomization.yml",
          "group": "2_workspace"
        },
        {
          "command": "k8s-manifest.applyKustomize",
          "when": "resourceFilename == kustomization.yaml || resourceFilename == kustomization.yml",
          "group": "2_workspace"
        }
      ]
    },
    "configuration": {
      "title": "Kubernetes Manifest Applier",
      "properties": {
        "k8s-manifest.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show apply/validate buttons in the editor gutter"
        },
        "k8s-manifest.kubectlContext": {
          "type": "string",
          "default": "",
          "description": "kubectl context to use (empty = current context)"
        },
        "k8s-manifest.kubectlNamespace": {
          "type": "string",
          "default": "",
          "description": "kubectl namespace to use (empty = default)"
        },
        "k8s-manifest.dryRun": {
          "type": "boolean",
          "default": false,
          "description": "Run kubectl apply with --dry-run=client"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx --yes @vscode/vsce package",
    "publish": "npx --yes @vscode/vsce publish",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vscode/test-electron": "^2.3.3",
    "eslint": "^8.45.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
